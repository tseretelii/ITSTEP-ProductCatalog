@model IEnumerable<ProductCatalog.Models.Entities.Product>

    @{
        ViewData["Title"] = "Product List";
    }


    <h1>Product List</h1>
<div style="display: flex; width: 100%; justify-content: space-around; flex-wrap: wrap">
    @foreach (var product in Model)
    {
        <div class="card" style="max-width: 320px; margin: 15px">
            <img src="@product.ProductImageURL" height="300" width="300" class="card-img-top" alt="Product Image">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0">$@product.Price</span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light">
                <button class="btn btn-primary btn-sm"><a asp-action="Details" asp-route-id="@product.Id" style="color:white; text-decoration:none">View Details</a></button>
            </div>
        </div>
    }
</div>
